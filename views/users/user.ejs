<div class="container-fluid">
  <div class="d-sm-flex align-items-center justify-content-between mb-3">
    <h1 class="page-title">USER INFO</h1>
  </div>

  <div class="row mb-2">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-8">
              <label class="form-label" for="fullname">Fullname</label>
              <input
                id="fullname"
                name="fullname"
                type="text"
                class="form-control"
                placeholder="Enter Fullname"
                aria-label="fullname"
                aria-describedby="basic-addon1"
              />
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <label class="form-label" for="username">Username</label>
              <input
                id="username"
                name="username"
                type="text"
                class="form-control"
                placeholder="Enter Username"
                aria-label="username"
                aria-describedby="basic-addon1"
              />
            </div>

            <div class="col-md-4">
              <label class="form-label" for="password">Password</label>
              <input
                id="password"
                name="password"
                type="password"
                class="form-control"
                placeholder="Enter Password"
                aria-label="password"
                aria-describedby="basic-addon1"
              />
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <label class="form-label" for="rolelist">Role</label>
              <select
                class="form-select form-control"
                aria-label="Default select example"
                name="rolelist"
                id="rolelist"
              >
                <option value="">Select Role</option>
              </select>
            </div>

            <div class="col-md-4">
              <label class="form-label" for="accesslist">Access</label>
              <select
                class="form-select form-control"
                aria-label="Default select example"
                name="accesslist"
                id="accesslist"
              >
                <option value="">Select Access</option>
              </select>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 mt-4">
              <button
                id="addBtn"
                name="addBtn"
                class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm w-50"
              >
                <i class="fa fa-plus" aria-hidden="true"></i>
                Add
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <div class="row mb-4">
        <div class="col-md-3">
          <h6 class="m-0 font-weight-bold table-title">User Table</h6>
        </div>
        <div class="col-md-6">
          <input
            id="search"
            name="search"
            type="text"
            class="form-control"
            placeholder="Search Username"
            aria-label="search"
            aria-describedby="basic-addon1"
          />
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive-sm">
          <table
            id="user-table"
            class="table table-bordered table-sm table-hover"
          >
            <thead class="table-dark">
              <th>FULLNAME</th>
              <th>USERNAME</th>
              <th>PASSWORD</th>
              <th>ROLE</th>
              <th>Access Type</th>
              <th>STATUS</th>
              <th>CREATED BY</th>
              <th>CREATED DATE</th>
              <th>ACTIONS</th>
            </thead>
            <tbody class="table-light"></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
